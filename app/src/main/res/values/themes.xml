<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Cho phép chúng ta ghi đè các thuộc tính cụ thể ở cấp độ nền tảng trong
    thư mục values-vXX tương ứng của chúng. -->
    <style name="Platform.Theme.JetchatByMe" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black30</item>
    </style>

    <!-- Chủ đề thực tế mà chúng tôi sử dụng. Điều này thay đổi đối với chủ đề sáng (tại đây),
    và values-night đối với chủ đề tối. -->
    <style name="Theme.JetchatByMe" parent="Platform.Theme.JetchatByMe">
        <item name="colorPrimary">@color/blue500</item>
        <item name="colorPrimaryDark">@color/blue800</item>
        <item name="colorAccent">@color/yellow700</item>
    </style>

    <style name="Theme.JetchatByMe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>